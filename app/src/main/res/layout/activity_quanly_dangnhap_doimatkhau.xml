<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_Quanly.Quanly_dangnhap_doimatkhau">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="25dp"
            android:src="@drawable/logo" />
        <TextView
            android:id="@+id/Quanly_doimatkhau_textview_maso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:ems="15"
            android:enabled="false"
            android:hint="Mã số"
            android:gravity="center"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/Quanly_doimatkhau_textbox_matkhaucu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:ems="15"
            android:hint="Nhập mật khẩu cũ"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/Quanly_doimatkhau_textbox_nhapmatkhaumoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:ems="15"
            android:hint="Nhập mật khẩu mới"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/Quanly_doimatkhau_textbox_nhaplaimatkhaumoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:ems="15"
            android:hint="Nhập lại mật khẩu mới"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Quanly_doimatkhau_button_huy"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_margin="15px"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/button"
                android:text="Hủy"
                android:textSize="15dp" />

            <Button
                android:id="@+id/Quanly_doimatkhau_button_xacnhan"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_margin="15px"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/button"
                android:text="Xác nhận"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>