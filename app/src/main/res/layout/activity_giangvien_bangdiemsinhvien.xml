<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_Giangvien.Giangvien_bangdiemsinhvien">
    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout1"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="25dp"
            android:src="@drawable/logo" />
        <TextView
            android:id="@+id/bangdiemsinhvien_textview_tensinhvien"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:ems="15"
            android:gravity="center_vertical"
            android:text="Tên sinh viên:"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/bangdiemsinhvien_textview_masinhvien"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:ems="15"
            android:gravity="center_vertical"
            android:text="Mã sinh viên:"
            android:textSize="18dp" />
        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/layout1"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/diemthuchanh"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:ems="15"
                android:gravity="center_vertical"
                android:text="Điểm thực hành:"
                android:textSize="18dp" />
            <EditText
                android:id="@+id/bangdiemsinhvien_textbox_diemthuchanh"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:ems="15"
                android:inputType="number"
                android:gravity="center_vertical"
                android:hint=""
                android:textSize="18dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/layout1"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/diemgiuaky"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:ems="15"
                android:gravity="center_vertical"
                android:text="Điểm giữa kỳ:"
                android:textSize="18dp" />
            <EditText
                android:id="@+id/bangdiemsinhvien_textbox_diemgiuaky"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:ems="15"
                android:inputType="number"
                android:gravity="center_vertical"
                android:hint=""
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/layout1"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/diemcuoiky"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:ems="15"
                android:gravity="center_vertical"
                android:text="Điểm cuối kỳ:"
                android:textSize="18dp" />
            <EditText
                android:id="@+id/bangdiemsinhvien_textbox_diemcuoiky"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:ems="15"
                android:inputType="number"
                android:gravity="center_vertical"
                android:hint=""
                android:textSize="18dp" />
        </LinearLayout>

        <Button
            android:id="@+id/bangdiemsinhvien_button_luu"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/button"
            android:text="Lưu" />

        <Button
            android:id="@+id/bangdiemsinhvien_button_xoa"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/button"
            android:text="Xóa khỏi lớp học phần" />



    </LinearLayout>
</FrameLayout>